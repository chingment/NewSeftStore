<view class="specsdialog" wx:if="{{show}}" catchtouchmove="ture">
	<view class='content' animation='{{animationData}}'>
		<view class="wrapper">
			<view class='close' bindtap='_close'>

				<image class="img" bindtap="_itemOperate" src='/content/default/images/icon_close.png'></image>

			</view>

			<view class="prdinfo">
				<view class="mainimg">
					<image class="img" src="{{productSku.mainImgUrl}}"></image>
				</view>
				<view class="detail">
					<text class="name">
					{{productSku.name}}
					</text>
					<view class="specs">
						<text class="field" >已选：</text>
						<text class="value" >{{productSku.specIdx}} </text>
					</view>
					<view class="price">
						<text class="saleprice">
						{{productSku.salePrice}}
						</text>
					</view>
				</view>
			</view>

			<view class="qtyinfo">
				<view class="field">
					<text class="txt">数量</text>
				</view>
				<view class="oparea">
					<view class="decrease">
						<image class="img" bindtap="_itemOperate" src='/content/default/images/decrease.png'></image>
					</view>
					<view class="quantity">
						<text class="txt">1</text>
					</view>
					<view class="increase">
						<image class="img" bindtap="_itemOperate" src='/content/default/images/increase.png'></image>
					</view>

				</view>
			</view>


			<view class="item-specsel" wx:if="{{productSku.specIdxSkus.length>1}}">


				<view class="specItem" wx:for="{{productSku.specItems}}" wx:for-index='n' wx:for-item="specItem" wx:key="x">

					<view class="specItemName">

						{{specItem.name}}
					</view>


					      <ul class="specItemValue clearfix">

						        <li wx:for="{{specItem.value}}" wx:for-item="oItem" bindtap="specificationBtn" data-show="{{oItem.isShow}}" class="{{oItem.isShow?'':'noneActive'}} {{specSubIndex[n] == oItem.name?'productActive':''}}" data-ol="{{specSubIndex[n]}}" data-name="{{oItem.name}}" data-n="{{n}}" data-index="{{index}}" wx:key="j">
							{{oItem.name}}
						</li>

						      </ul>

					   
				</view>

			</view>

		</view>

		<view class="addtocart">

			<button class="btn bg-main">加入购物车</button>

		</view>
	</view>

</view>