.st-index {
  padding: 0 0.5rem;
}

.store {
  align-items: center;
  display: flex;
  padding: 0.3rem 0rem;
}

.store .icon {
  width: 1.5rem;
  height: 1.5rem;
  margin-right: 0.2rem;
}

.store .title {
  font-size: 1rem;
  margin-right: 0.5rem;
}

.store .more {
  width: 0.6rem;
  height: 0.4rem;
  align-items: center;
  justify-content: 1;
  display: flex;
}

.banner {
  height: auto;
  position: relative;
}

.banner .its-swiper {
  width: 100%;
  height: 9.2rem;
  text-align: center;
}

.banner .its-swiper  .it .img {
  width: 100%;
  height: 100%;
  border-radius: 6px;
}

.banner .its-dot {
  width: 100%;
  height: 1rem;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 0;
  bottom: 0.3rem;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

.banner .its-dot >.it {
  width: 0.6rem;
  height: 0.6rem;
  margin-right: 1rem;
  background-color: #fff;
  border-radius: 0.6rem;
}

.banner .its-dot >.it:last-child {
  margin-right: 0;
}

.banner .its-dot .it-active {
  width: 1.2rem;
  height: 0.6rem;
  background-color: #f18d00;
}

.its-fc {
  margin-top: 0.8rem;
  margin-bottom: 0.8rem;
  padding: 0.6rem 0;
  display: flex;
  border-radius: 6px;
  box-shadow: 0 0 16px rgba(0, 0, 0, 0.1);
}

.its-fc .it {
  flex: 1;
  text-align: center;
  height: 4.2rem;
}

.its-fc .icon {
  width: 3rem;
  height: 3rem;
  display: inline-block;
}

.its-fc .title {
  height: 1.2rem;
  line-height: 0.6rem;
  display: block;
  text-align: center;
  font-size: 0.8rem;
  color: #676767;
}

.pdArea .its-pdArea .it-a1 {
  height: 1.5rem;
  line-height: 1.5rem;
  display: flex;
  overflow: hidden;
  text-align: center;
  z-index: 999;
}

.pdArea .its-pdArea .it-a1 > .title {
  display: block;
  color: #ffb101;
  flex: 1;
  text-align: left;
}

.pdArea  .its-pdArea .it-a1> .more {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.pdArea  .its-pdArea .it-a1> .more .title {
  color: #888;
  font-size: 0.8rem;
}

.pdArea  .its-pdArea .it-a1> .more .icon {
  width: 0.3rem;
  height: 0.5rem;
  align-items: center;
  justify-content: 1;
  display: flex;
  margin-left: 0.3rem;
  margin-right: 0.2rem;
}

.pdArea .its-pdArea .it-a2 .img {
  height: 132rpx;
  width: 100%;
}
