
page{
  overflow: hidden;
}
.main-tabbar {
  background-color: #fff;
    overflow: hidden;
}

.main-tabbar >.content {
  overflow: hidden;
}

.main-tabbar >.content> .ct {
  height: 100%;
}

.main-tabbar>.nav {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 104rpx;
  overflow: hidden;
  border-top: 1rpx #dbdbdb solid;
  background: #fff;
}

.main-tabbar>.nav  > .ct {
  padding: 0;
  margin: 0;
  height: 100%;
  overflow: hidden;
}

.main-tabbar>.nav  > .ct> .its {
  display: flex;
  height: 100%;
}

.main-tabbar>.nav  > .ct> .its > .it {
  flex: 1;
  text-align: center;
  overflow: hidden;
  position: relative;
  padding: 15rpx 0 15rpx 0;
}

.main-tabbar>.nav .icon {
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
}

.main-tabbar>.nav .icon .img {
  width: 100%;
  height: 100%;
}

.main-tabbar>.nav  .title {
  color: #8a8a8a;
  height: 22rpx;
  line-height: 22rpx;
  font-size: 21rpx;
}

.main-tabbar>.nav  .number {
  font-size: 21rpx;
  width: 50rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 50rpx;
  background-color: #f00;
  color: #fff;
  position: absolute;
  right: 30rpx;
  z-index: 999;
  top: 10rpx;
}
