@import '../index/index.wxss';
@import '../productkind/productkind.wxss';
@import '../cart/cart.wxss';
@import '../personal/personal.wxss';
page{
  overflow: hidden;
}
.main-tabbar {
  background-color: #fff;
}

.main-tabbar >.content {
  overflow: hidden;
}

.main-tabbar >.content> .ct {
  height: 100%;
}

.main-tabbar>.nav {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 3.044rem;
  overflow: hidden;
  border-top: 1px #dbdbdb solid;
  background: #fff;
}

.main-tabbar>.nav  > .ct {
  padding: 0;
  margin: 0;
  height: 100%;
  overflow: hidden;
}

.main-tabbar>.nav  > .ct> .its {
  display: flex;
  height: 100%;
}

.main-tabbar>.nav  > .ct> .its > .it {
  flex: 1;
  text-align: center;
  overflow: hidden;
  position: relative;
  padding: 0.4rem 0rem 0.4rem 0rem;
}

.main-tabbar>.nav .icon {
  width: 1.4rem;
  height: 1.4rem;
  display: inline-block;
}

.main-tabbar>.nav .icon .img {
  width: 100%;
  height: 100%;
}

.main-tabbar>.nav  .title {
  color: #8a8a8a;
  height: 0.844rem;
  line-height: 0.844rem;
  font-size: 0.7rem;
}

.main-tabbar>.nav  .number {
  font-size: 0.6rem;
  width: 1.6rem;
  height: 1.1rem;
  line-height: 1.1rem;
  border-radius: 1.2rem;
  background-color: #f00;
  color: #fff;
  position: absolute;
  right: 1rem;
  z-index: 999;
  top: 0.2rem;
}
