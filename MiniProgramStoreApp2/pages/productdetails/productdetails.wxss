.details-main{
   margin-bottom:88rpx;
   padding-bottom: 88rpx;
}

swiper {
  height: 500rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.details-info1 {
  border-top: 1px solid #f8f8f8;
  border-bottom: 1px solid #f8f8f8;
  margin: 22rpx 22px;
}

.details-info1 .item-name {
  font-weight: bold;
  font-size: 38rpx;
  height: 82rpx;
  line-height: 82rpx;
}

.details-info1 .item-briefIntro {
  font-size: 28rpx;
  height: 42rpx;
  line-height: 42rpx;
}

.details-info1 .item-price {
  height: 62rpx;
  line-height: 62rpx;
}

.details-info1 .item-price .unitPrice {
  font-size: 38rpx;
  height: 62rpx;
  line-height: 62rpx;
  font-weight: bold;
  color: #f18d00;
}

.details-info1 .item-price .showPrice {
  font-size: 22rpx;
  margin-left: 20rpx;
  text-decoration: line-through;
}

.details-info2 {
}

.details-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 1rpx #dbdbdb solid;
  overflow: hidden;
  z-index: 999
}

.details-nav .item-home {
  text-align: center;
  width: 100rpx;
  line-height: 100rpx;
  height: 88rpx;
  padding-left: 35rpx;
}

.details-nav .item-home image {
  width: 38rpx;
  height: 38rpx;
}

.details-nav .item-cart {
  width: 100rpx;
  text-align: center;
  line-height: 100rpx;
  height: 88rpx;
  padding-right: 35rpx;
  position: relative;
}

.details-nav .item-cart image {
  width: 38rpx;
  height: 38rpx;
}

.details-nav .item-increase {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}

.details-nav .item-buy {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}

.details-nav .item-cart .number {
  width: 45rpx;
  height: 32rpx;
  border: 0 solid #f00;
  background-color: #f10b2e;
  color: #fff;
  right: 40rpx;
  border-radius: 30rpx;
  line-height: 34rpx;
  z-index: 999;
  top: 8rpx;
  position:absolute;
  font-size: 20rpx;
}
