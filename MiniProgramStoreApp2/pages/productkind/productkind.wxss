/* 滚动 */

.searchbox {
  position: relative;
  overflow: hidden;
  height: 58rpx;
  background-color: white;
  padding: 18rpx 30rpx;
  border-bottom: 3rpx solid #F0F0F5;
  border-top: 3rpx solid #F0F0F5;
}

.searchbox-ct{
  display: flex;
  background: #F0F0F5;
  border-radius: 38rpx;
  height: 58rpx;
  padding: 0 30rpx;
}
.searchbox-icon {
  align-items: center;
  display: flex;
}

.searchbox-icon .img{
width:42rpx;
height:42rpx;
}

.searchbox-tips{
  flex: 1;
  padding-left: 15rpx;
}

.searchbox-tips .swiperitem {
  height: 100%;
}

.searchbox-tips .swiperview .wx-swiper-dots {
  display: none;
}

.searchbox-tips .swiper-txt {
  font-size: 24rpx;
  color: #b0b0b0;
  line-height: 60rpx;
}