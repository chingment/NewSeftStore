/* 自定义顶部栏高度 */
.nav {
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}

.nav-ct {
  display: flex;
}

.nav-goback {
  align-items: center;
  display: flex;
  padding-left: 20rpx;
  width: 50rpx;
}

.nav-goback .img {
  width: 40rpx;
  height: 40rpx;
}

.nav-searchbox{
 align-items: center;
 display: flex;
 width: 60%;
}

.searchbox{
  display: flex;
  background: #F0F0F5;
  border-radius: 38rpx;
  height: 58rpx;
  padding: 0 30rpx;
  width: 100%;
}

.searchbox-icon {
  align-items: center;
  display: flex;
}

.searchbox-icon .img{
width:42rpx;
height:42rpx;
}

.searchbox-ipt{
  flex: 1;
  padding-left: 15rpx;
}

.searchbox-ipt .ipt {
  height: 58rpx;
  line-height: 58rpx;
  text-align: left;
  letter-spacing: 0px;
}



/*col-its-a*/

.its-skus {
  border-top: 0px solid #f6f6f6;
}

.its-skus .it {
  display: flex;
  padding: 6rpx 0;
  background: #fff;
}

.its-skus .it-l {
  border-bottom-width: 0;
  width: 100rpx;
  margin-right: 12rpx;
}

.its-skus .it-l .icon {
  width: 100%;
  height: 100%;
  align-items: center;
  display: flex;
}

.its-skus .it-l .icon .img {
  width: 80rpx;
  height: 80rpx;
}


.its-skus .it-m {
  border-bottom: 3rpx solid #f6f6f6;
  flex: 1;
  display: flex;
}

.its-skus .it-ml {
  flex: 1;
}

.its-skus .it-mr {
  width: 120rpx;
  overflow: hidden;
  flex: none;
  text-align: right;
  align-items: center;
  display: flex;
  justify-content: flex-end;
}

.its-skus.it-r {
  width: 42rpx;
  overflow: hidden;
  text-align: right;
  flex: none;
  border-bottom-width: 0;
}

.its-skus .it-r .icon {
  height: 100%;
  align-items: center;
  display: flex;
  justify-content: flex-end;
}

.its-skus .it-r .icon .img-nav-left-top {
  width: 22rpx;
  height: 22rpx;
}

.its-skus .it-ml .txt-search{
  height: 72rpx;
  line-height: 72rpx;
  text-align: left;
  display: block;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  
}

.its-skus .it:last-child .it-m {
  border-bottom-width: 0;
}

.its-skus .flex1 {
  flex: 1;
}

.its-skus .w100 {
  flex: none;
  width: 100px;
}
