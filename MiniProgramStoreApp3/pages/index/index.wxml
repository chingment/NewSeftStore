<skeleton loading="{{ skeletonSelectedLoadingType }}" bgcolor="{{ skeletonBgcolor }}" isDev="{{ skeletonIsDev }}"
	data="{{ skeletonData }}" wx:if="{{ !pageIsReady || skeletonIsDev }}"></skeleton>
<specsdialog isShow="{{specsDialog.isShow}}" productSku="{{specsDialog.productSku}}" storeId="{{specsDialog.storeId}}"
	shopMode="{{specsDialog.shopMode}}"></specsdialog>

<scroll-view scroll-y="true" style="height:{{height}}px;">
	<view class="page st-index pd-com skeleton" wx:if="{{ pageIsReady }}">
		<view class="page-ct">
			<view style="height:61rpx;width:100%">
				<view class="store" bindtap="goSelectStore">
					<image class="icon-img skeleton-circle" src="/content/default/images/store_address.png"></image>
					<text class="title skeleton-rect">{{currentStore.name}}</text>
					<image wx:if="{{!singleStore}}" class="more-img" src="/content/default/images/arro_down.png"></image>
				</view>

				<view class="shopmode">
					<view class="radio-grp">
						<block wx:for="{{shopModes}}" wx:for-item="item" wx:key="index">
							<view class="radio-item" bindtap="switchShopMode" data-reply-shopmodeid="{{item.id}}">
								<image class="img skeleton-circle"
									src='/content/default/images/{{item.selected==false?"radio_off":"radio_on"}}.png'></image>
								<text class='txt {{item.selected==false?"txt-off":"txt-on"}} skeleton-rect'>{{item.name}}</text>
							</view>
						</block>
					</view>
				</view>
			</view>
			<view class="banner skeleton-rect">
				<view class="ct">
					<block wx:if="{{banner.imgs.length>0}}">
						<swiper class="its-swiper" autoplay="true" interval="2000" duration="500" circular="true"
							indicator-dots="true">
							<block wx:for="{{banner.imgs}}" wx:key="item">
								<swiper-item class="it">
									<image lazy-load class="img" src="{{item.url}}"></image>
								</swiper-item>
							</block>
						</swiper>
						<!-- <view class="its-dot">
            <block wx:for="{{banner.imgs}}" wx:key="item">
              <view class="it{{index == banner.currentSwiper ? ' it-active' : ''}}"></view>
            </block>
          </view> -->
					</block>
				</view>
			</view>
			<view class="fc">
				<view class="ct">
					<view class='its-fc'>
						<view class="it" bindtap="clickToFc" data-ischecklogin="false" data-url="/pages/notopen/notopen">
							<view class="icon">
								<image class='img skeleton-circle' src='/content/default/images/index-fc-seckill.png'></image>
							</view>
							<view class="title skeleton-rect">
								<text class='txt'>限时秒杀</text>
							</view>
						</view>
						<view class="it" bindtap="clickToFc" data-ischecklogin="false"
							data-url="/pages/couponrevcenter/couponrevcenter">
							<view class="icon">
								<image class='img skeleton-circle' src='/content/default/images/index-fc-newuser.png'></image>
							</view>
							<view class="title skeleton-rect">
								<text class='txt'>领券中心</text>
							</view>
						</view>
						<view class="it" bindtap="clickToFc" data-ischecklogin="false" data-url="/pages/memberprom/memberprom">
							<view class="icon">
								<image class='img skeleton-circle' src='/content/default/images/index-fc-member.png'></image>
							</view>
							<view class="title skeleton-rect">
								<text class='txt'>会员专区</text>
							</view>
						</view>
						<view class="it" bindtap="clickToFc" data-ischecklogin="true"
							data-url="/pages/mycoupon/mycoupon?operate=1&isGetHis=false">
							<view class="icon">
								<image class='img skeleton-circle' src='/content/default/images/index-fc-coupon.png'></image>
							</view>
							<view class="title skeleton-rect">
								<text class='txt'>我的优惠券</text>
							</view>
						</view>
					</view>
				</view>
			</view>

			<view class="pdRent" wx:if="{{pdRent.list.length>0}}">
				<view class="ct">
					<view class="its-pdRent">
						<view class="it">
							<view class="it-a1">
								<view class="title">
									<text class='txt skeleton-rect'>{{pdRent.name}}</text>
								</view>

							</view>

							<view class="it-a3 prd-list-3">
								<block wx:for="{{pdRent.list}}" wx:for-index="index" wx:for-item="item" wx:key="list">
									<view class='it'>
										<view class="it-left">
											<view class='imgurl skeleton-rect'>
												<view wx:if="{{item.isOffSell}}" class="isOffSell-box">
													<view class="isOffSell-tip">已下架</view>
												</view>
												<image lazy-load class="img" src="{{item.mainImgUrl}}"></image>
											</view>
										</view>
										<view class="it-rigt">
											<text class="name font-gray skeleton-rect">{{item.name}}</text>
											<text class="briefInfo font-gray skeleton-rect">{{item.briefDes}}</text>
											<view class="price skeleton-rect ">
												<text class="rentMhPrice">{{item.rentMhPrice}}</text>
												<text class="rentMhPriceUnit">/月</text>
											</view>
											<view class="area2">
												<view class="operate skeleton-rect">
													<text class="btn-rent" bindtap="clickToRent" data-reply-skuid="{{item.id}}"
														data-reply-sku="{{item}}">立即租用</text>
												</view>
											</view>
										</view>
									</view>
								</block>
							</view>
						</view>
					</view>
				</view>
			</view>

			<view class="pdArea">
				<view class="ct">
					<view class="its-pdArea">
						<block wx:for-items="{{pdArea.tabs}}" wx:for-item="tab" wx:key="index">
							<view class="it">
								<view class="it-a1">
									<view class="title">
										<text class='txt skeleton-rect'>{{tab.name}}</text>
									</view>
									<navigator class='more' url="/pages/productsearch/productsearch?kindId={{tab.id}}" hover-class="none">
										<view class="title">
											<text class="txt skeleton-rect">更多优选</text>
										</view>
										<view class="icon">
											<image class='img skeleton-rect' src='/content/default/images/col_nav_right.png'></image>
										</view>
									</navigator>
								</view>
								<view class='it-a2 skeleton-rect'>
									<image class="img" binderror="imageOnloadError" src="{{tab.mainImgUrl}}"></image>
								</view>
								<view class="it-a3 prd-list-1">
									<block wx:for="{{tab.list.items}}" wx:for-index="index" wx:for-item="item" wx:key="list">

										<view class='it it-{{index%2}}'>

											<navigator class='imgurl skeleton-rect'
												url="/pages/productdetails/productdetails?skuId={{item.id}}">
												<view wx:if="{{item.isOffSell}}" class="isOffSell-box">
													<view class="isOffSell-tip">已下架</view>
												</view>
												<image lazy-load class="img" src="{{item.mainImgUrl}}"></image>
											</navigator>
											<text class="name font-gray skeleton-rect">{{item.name}}</text>
											<text class="briefInfo font-gray skeleton-rect">{{item.briefDes}}</text>
											<view class="area2">
												<view class="price skeleton-rect ">
													<text class="saleprice">{{item.salePrice}}</text>
													<text wx:if="{{item.isShowPrice}}" class="showprice font-gray">{{item.showPrice}}</text>
												</view>
												<view class="operate skeleton-rect">

													<block wx:if="{{item.specIdxSkus.length<=1}}">


														<!-- <view class="decrease">
                          <image class="img" bindtap="addToCart" data-reply-operate="3" data-reply-skuid="{{item.id}}" data-reply-sku="{{item}}"  src='/content/default/images/decrease.png'></image>
                        </view>
                        <text class="quantity">0</text> -->

														<view class="increase">
															<image wx:if="{{!item.isOffSell}}" class="img" bindtap="addToCart" data-reply-operate="2"
																data-reply-skuid="{{item.id}}" data-reply-sku="{{item}}"
																src='/content/default/images/increase.png'></image>
														</view>



													</block>

													<block wx:else>

														<text class="btn-selectSpecs" bindtap="selectSpecs" data-reply-skuid="{{item.id}}"
															data-reply-sku="{{item}}">选规格</text>

													</block>


												</view>
											</view>

										</view>
									</block>
								</view>
							</view>
						</block>
					</view>
				</view>
			</view>
		</view>
	</view>
</scroll-view>