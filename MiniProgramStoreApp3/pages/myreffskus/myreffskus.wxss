.page-ct{
  padding: 0px 16px;
}

.its-reffskus {
  padding: 0 0;
}

.its-reffskus > .it {
  display: flex;
  flex-direction: row;
  border-bottom: 3rpx solid #f8f8f8;
  padding: 8rpx 0;
}

.its-reffskus > .it:last-child {
  border-bottom: 0 solid #f8f8f8;
}

.its-reffskus > .it > .it-l {
  display: inline-block;
  overflow: hidden;
  text-align: right;
}

.its-reffskus > .it > .it-l .imgUrl {
  align-items: center;
  display: flex;
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
}

.its-reffskus > .it > .it-l .imgUrl .img {
  width: 100%;
  height: 100%;
}

.its-reffskus > .it > .it-m {
  flex: 1;
  display: flex;
}

.its-reffskus > .it > .it-m > .it-ml {
  flex: 1;
  align-items: center;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
}


.its-reffskus  > .it > .it-m > .it-mr {
  text-align: center;
  width: 80rpx;
  align-items: center;
  display: flex;
  justify-content: flex-end;
}

.its-reffskus  > .it > .it-r {
  text-align: center;
  align-items: center;
  margin-left: 10rpx;
  min-width: 90rpx;
}

.its-reffskus .name {
  font-size: 28rpx;
}

.its-reffskus .quantity {
  font-size: 28rpx;
  color: #999;
}

.its-reffskus .salePrice {
  color: #f18d00;
  font-size: 34rpx;
}

.its-reffskus .quantity {
  font-size: 28rpx;
  color: #999;
}

.its-reffskus .originalPrice {
  color: #999;
  font-size: 32rpx;
  text-decoration:line-through;
}

.its-reffskus .salePrice {
  color: #f18d00;
  font-size: 34rpx;
}

.its-reffskus .avatar .img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}