.details-main {
  margin-bottom: 88rpx;
  padding-bottom: 88rpx;
}

swiper {
  height: 500rpx;
}

.swiper-img {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.swiper-img image {
  height: 100%;
}

.details-info1 {
  border-top: 3rpx solid #f8f8f8;
  border-bottom: 3rpx solid #f8f8f8;
  padding: 22rpx 22rpx;
}

.details-info1 .item-name {
  font-weight: bold;
  font-size: 36rpx;
  line-height: 42rpx;
  padding-top: 18rpx;
}

.details-info1 .item-briefIntro {
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.details-info1 .item-price {
  height: 62rpx;
  line-height: 62rpx;
}

.details-info1 .item-price .unitPrice {
  font-size: 38rpx;
  height: 62rpx;
  line-height: 62rpx;
  font-weight: bold;
  color: #f18d00;
}

.details-info1 .item-price .showPrice {
  font-size: 22rpx;
  margin-left: 20rpx;
  text-decoration: line-through;
}



.details-info1 .item-isOffSell .txt {

  font-size: 26rpx;
  color: #f00;
}

.details-info2 {}

.details-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 3rpx #dbdbdb solid;
  overflow: hidden;
  z-index: 999
}

.details-nav .item-home {
  text-align: center;
  width: 150rpx;
  line-height: 100rpx;
  height: 88rpx;
}

.details-nav .item-home image {
  width: 38rpx;
  height: 38rpx;
}

.details-nav .item-cart {
  width: 100rpx;
  text-align: center;
  line-height: 100rpx;
  height: 88rpx;
  padding-right: 35rpx;
  position: relative;
}

.details-nav .item-cart image {
  width: 38rpx;
  height: 38rpx;
}

.details-nav .item-increase {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}

.details-nav .item-buy {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}

.details-nav .item-cart .number {
  width: 45rpx;
  height: 32rpx;
  border: 0 solid #f00;
  background-color: #f10b2e;
  color: #fff;
  right: 40rpx;
  border-radius: 30rpx;
  line-height: 34rpx;
  z-index: 999;
  top: 8rpx;
  position: absolute;
  font-size: 20rpx;
}

.details-info3 {
  margin: 0 22rpx;
}

.its-option .it {
  display: flex;
}

.its-option .title {
  width: 70rpx;
  font-weight: 800;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.its-option .content {
  flex: 1;
  width: 200rpx;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}


.its-option .icon {
  width: 200rpx;
  display: flex;
  justify-content: flex-end;
}

.item-renttip {
  background: #faf2ff;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  padding: 15rpx;
  border-radius: 10rpx;
  color: #9d404a;
  display: flex;
  align-items: center;
}

.item-renttip .icon {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}

.btn-rent2 {
  color: #0584ae;
}

.specinfo {
  display: block;
  overflow: hidden;
}

.spect-item {
  color: #323232;
}

.spect-item-name {
  font-size: 28rpx;
  display: block;
  color: #636363;
  padding: 12rpx 0;
}

.spect-item-values {
  display: flex;
}

.spect-item-value {
  border: 3rpx solid #f8f8f8;
  background-color: #f8f8f8;
  border-radius: 6rpx;
  color: #2b2b2b;
  text-align: center;
  float: left;
  min-width: 100rpx;
  margin-right: 24rpx;
  padding: 12rpx 42rpx;
  font-size: 24rpx;

}

.spect-item-values .active {
  background-color: #ffb101;
  color: #fff;
  border: 3rpx solid #ffb101;
}

.spect-item-values .invalid {
  background-color: #ccc;
  opacity: 0.4;
  color: #000;
  pointer-events: none;
}

.charTags {
  display: flex;
}

.charTags .it-charTag {
  flex: 1;
  display: flex;
  white-space: nowrap;
  margin: 20rpx 0rpx;
  text-overflow: ellipsis;
  margin-right: 20rpx;
}

.it-charTag .icon{
 width: 38rpx;
 height: 38rpx;
}

.it-charTag .txt{
  color: #cdcdcd;
}

.item-tag .tag{
  padding: 8rpx;
  border-radius: 5rpx;
  color: #b45052;
  background-color: #ffedeb;
  display: inline-block;
  margin-top: 10rpx;
}