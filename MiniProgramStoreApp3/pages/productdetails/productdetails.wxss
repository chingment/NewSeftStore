}

.details-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 3rpx #dbdbdb solid;
  overflow: hidden;
  z-index: 999
}

.details-nav .item-home {
  text-align: center;
  width: 150rpx;
  line-height: 100rpx;
  height: 88rpx;
}

.details-nav .item-home image {
  width: 38rpx;
  height: 38rpx;
}

.details-nav .item-cart {
  width: 100rpx;
  text-align: center;
  line-height: 100rpx;
  height: 88rpx;
  padding-right: 35rpx;
  position: relative;
}

.details-nav .item-cart image {
  width: 38rpx;
  height: 38rpx;
}

.details-nav .item-increase {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}

.details-nav .item-buy {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}

.details-nav .item-cart .number {
  width: 45rpx;
  height: 32rpx;
  border: 0 solid #f00;
  background-color: #f10b2e;
  color: #fff;
  right: 40rpx;
  border-radius: 30rpx;
  line-height: 34rpx;
  z-index: 999;
  top: 8rpx;
  position:absolute;
  font-size: 20rpx;
}

